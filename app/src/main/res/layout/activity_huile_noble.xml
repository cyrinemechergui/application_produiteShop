<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    tools:context=".huile_noble">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="152dp"
        android:layout_height="99dp"
        app:srcCompat="@drawable/pps" />



    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/f3" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="huile_bio_noble"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/im2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="340dp"
        app:srcCompat="@drawable/panier2" />

    <ImageView
        android:id="@+id/im3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/hv1" />






        <TextView
            android:id="@+id/titre1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/note"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold" />



    <Button
        android:id="@+id/btn1"
        android:layout_width="279dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#FFFFFF"
        android:text="Ajouter au panier"
        android:textColor="#F31A0707"
        android:textColorHint="#00EEE9E9" />


</LinearLayout>